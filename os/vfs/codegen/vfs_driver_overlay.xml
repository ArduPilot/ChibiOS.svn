    <functions>
      <function name="__drv_overlay_init" ctype="void">
        <brief>Module initialization.</brief>
        <init />
        <implementation><![CDATA[

/* Initializing pools.*/
chPoolObjectInit(&vfs_overlay_driver_static.dir_nodes_pool,
                 sizeof (vfs_overlay_dir_node_c),
                 chCoreAllocAlignedI);
chPoolObjectInit(&vfs_overlay_driver_static.file_nodes_pool,
                 sizeof (vfs_overlay_file_node_c),
                 chCoreAllocAlignedI);

/* Preloading pools.*/
chPoolLoadArray(&vfs_overlay_driver_static.dir_nodes_pool,
                &vfs_overlay_driver_static.dir_nodes[0],
                DRV_CFG_OVERLAY_DIR_NODES_NUM);
chPoolLoadArray(&vfs_overlay_driver_static.file_nodes_pool,
                &vfs_overlay_driver_static.file_nodes[0],
                DRV_CFG_OVERLAY_FILE_NODES_NUM);]]></implementation>
      </function>
    </functions>
